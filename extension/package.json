{
  "name": "lna-vscode-extension",
  "displayName": "LnA-vscode-extension",
  "description": "A VS Code extension made for Radboud's CS course Logic and Application to be used in combination with vscoq",
  "version": "1.0.0",
  "publisher": "logic-and-applications-ru",
  "repository": "https://github.com/logic-and-applications/rocq-lna",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:coq"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.rocq-lna.excludeFile",
        "category": "Rocq LnA",
        "title": "Add to ignored files in workspace settings"
      }
    ],
    "configuration": [
      {
        "title": "Excluded files",
        "properties": {
          "rocq-lna.excludedFiles": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [],
            "description": "The list of files which the lna vscode extension ignores"
          }
        }
      }
    ]
  },
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "maximedenes.vscoq"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test --headless"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.15.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
